<style >
.link{
  text-decoration: underline;
}
body{
  background-image: url("http://hungryforchange.tv/images/happypeople.jpg");
}

</style>

<div class="container">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
      <li data-target="#myCarousel" data-slide-to="3"></li>

    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <img src="https://i.pinimg.com/736x/46/fd/c1/46fdc1df8272a4120cd5b08b656dfa25--funny-face-pics-funny-baby-faces.jpg" alt="Los Angeles">
      </div>

      <div class="item">
        <img src="http://deskbg.com/s3/wpp/3/3241/big-smile-jessica-alba-desktop-background.jpg" alt="Chicago" >
      </div>

      <div class="item">
        <img src="http://cache.lovethispic.com/uploaded_images/blogs/10-Funny-Monday-Morning-Faces-6121-7.jpg" alt="New york">
      </div>

      <div class="item">
        <img src="https://in.bookmyshow.com/entertainment/wp-content/uploads/maxresdefault%20(1)(4).jpg" alt="New york">
      </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
<div>
  <%= link_to 'Sign Up', new_user_registration_path, class: "btn btn-success btn-lg active btn-block" %> <br>
  <%= link_to 'Log In', new_user_session_path, class: "btn btn-primary btn-lg active btn-block" %> <br>
</div>

<%= link_to 'Log Out', destroy_user_session_path, class:"link" %>
