<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<div class="container">
  <div class="panel-group">
    <div class="panel panel-primary">
      <div class="panel-heading"><h5 class="font-size-24">Select A Genre</h5></div>

      <!-- Do not change this CODE, I repeat, DO NOT CHANGE THIS CODE -->
      <% if @is_genres %>
      <audio controls>
        <source src="<%= @genre[:url] %>" type="audio/mpeg">
        Your browser does not support the audio tag.
      </audio>
      	<% if @genre_error.present? %>
      	<%=  @genre_error %>
      	<% end %>
      <% else %>
      	<% @genres.each do |g| %>
      		<%= link_to g, photobooth_path(@photobooth, genres: g), class: "button" %>
      	<% end %>
      <% end %> <br>
    </div>
  </div>
</div>



<%= link_to 'Edit', edit_photobooth_path(@photobooth), class: "links" %> |
