<div class="cloud">
    <%= image_tag('sign-up.png')%>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-horizontal center"}) do |f| %>
    <div class="field form-group">
      <%= f.email_field :email, autofocus: true, placeholder: raw("&#xf007") + " Username", style: "font-family: FontAwesome" %>
    </div>

    <div class="field form-group">
  
      <%= f.password_field :password, autocomplete: "off", placeholder: raw("&#xf023") + " Password", style: "font-family: FontAwesome" %>
    </div>

    <div class="field form-group">
      <!-- <%= f.label :password_confirmation %><br /> -->
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: raw("&#xf023") + " Password Confirmation", style: "font-family: FontAwesome" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

