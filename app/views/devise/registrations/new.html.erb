<style>

#sign-up-header {
  width: 36%;
  position: absolute;
  top: 35%;
  left: 33%;
  color: #fefefe;
}

#sign-up {
  position: relative;
  top: 50%;
  width: 650px;
  height: 460px;
  background-color: #fefefe;
}


#sign-up-email input {
  height: 110px;
  font-size: 2.8rem;
  letter-spacing: .4rem;
}

#sign-up-password input {
  height: 110px;
  font-size: 2.8rem;
  letter-spacing: .4rem;
}

#sign-up-button input {
    width: 650px;
    height: 110px;
    background-color: #ba77ff;
    font-size: 46px;
    font-weight: 300;
    line-height: 50%;
}

</style>

<div class="cloud">
<div class="container m-0 p-0" id="sign-up-header">
  <div class="row m-0 p-0">
    <h1 style="font-size: 6.2rem;">Sign Up</h1>  
  </div>
</div>
<div class="container" id="sign-up">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-horizontal center"}) do |f| %>

      <div class="form-group m-0 p-0" id="sign-up-email">
      <%= f.email_field :email, autofocus: false, placeholder:  "Username", class: 'form-control' %>
      </div>
      <div class="form-group m-0 p-0" id="sign-up-password">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: 'form-control' %>
      </div>
      <div class="form-group m-0 p-0" id="sign-up-password">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", class: 'form-control' %>
      </div>
      <div class="actions d-flex justify-content-center" id="sign-up-button">
        <%= f.submit "Submit", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
